{
  "name": "scholarsuite",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type:gen": "next typegen && npx prisma generate",
    "type:check": "tsc --noEmit",
    "test:unit": "node --test",
    "db:format": "npx prisma format",
    "db:generate": "npx prisma generate",
    "db:seed-dev": "node --env-file-if-exists=.env prisma/seed.ts",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "biome:check": "npx @biomejs/biome check",
    "biome:fix": "npx @biomejs/biome check --write",
    "pre-commit": "node --run biome:fix && next typegen && npx prisma generate && node --run type:check",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "imports": {
    "#prisma/*": "./generated/*.ts",
    "#lib/*": "./src/lib/*",
    "#styles/*": "./src/styles/*",
    "#components/*": "./src/components/*",
    "#utils/*": "./src/utils/*",
    "#locales/*": "./locales/*",
    "#providers/*": "./src/providers/*"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-select": "^2.2.6",
    "@tailwindcss/postcss": "^4.1.17",
    "better-auth": "^1.3.34",
    "classnames": "^2.5.1",
    "next": "^16.0.1",
    "next-intl": "^4.5.3",
    "next-themes": "^0.2.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@storybook/nextjs": "^10.0.7",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "prisma": "^6.19.0",
    "storybook": "^10.0.7",
    "typescript": "^5.9.3"
  }
}
